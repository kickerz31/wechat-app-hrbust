@import 'utils/weui.scss';
@import 'utils/loading.scss';
@import 'utils/message.scss';

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: rgb(41,41,41);
  color: #fff;
  font-size: 16px;
  box-shadow: inset 0 5px 5px -5px #000;
}

.weui-loadmore {
  margin: 0 auto;
  padding: 1.5em 0;
}

.common-button-wrapper {
  padding: 10px 20px;
}

.common-button-flex {
  width: 100%;
  display: flex;
}

.common-button {
  color: #fff;
  background-color: transparent;
  box-shadow: 0 0 10px #000;
  font-size: 12px;
}
