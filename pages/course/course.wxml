  <block wx:if="{{!courseData}}">
    <view class="container">
      <view class="jar">
        <view class="mouth"></view>
        <view class="neck"></view>
        <view class="base">
          <view class="liquid"> </view>
          <view class="wave wave1"></view>
          <view class="wave wave2"></view>
          <view class="bubble bubble1"></view>
          <view class="bubble bubble2"></view>
        </view>
        <view class="bubble bubble3"></view>
        <view class="bubble bubble4"></view>
      </view>
    </view>
    <view class="loadingText">
      正在加载<p class="dotting"></p>
    </view>
  </block>
  <block wx:else>
    <scroll-view  bindtouchend="touchendPage" bindtouchstart="touchstartPage" bindtouchmove="touchmovePage" scroll-x="true" class="topWrap" >
      <view scroll-x="true" class="wrap" >
        <view class="timetableWrapper" wx:for="{{courseData.timetableArr}}" wx:for-index="idx" wx:for-item="timetableItem">
          <view class="time">{{idx}}</view>
          <view class="timetableContent" wx:for="{{timetableItem}}" wx:for-index="idx" wx:for-item="item">
            <block wx:if="{{day == idx+1 || (day == 0 && idx == 6)}}">
              <view class="todayStyle courseItem">{{item}}</view>
            </block>
            <block wx:else>
              <view class="courseItem">{{item}}</view>
            </block>
          </view>
        </view>
      </view>
    </scroll-view >
  </block>

