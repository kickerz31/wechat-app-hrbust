.timetableWrapper {
  /*margin-left: 5rem;*/
  font-size: 12px;
  display: flex;
  position: relative;
  justify-content: space-between;
}
.timetableContent {
  border: 1px solid #424242;
  flex: 1;
  line-height: 24px;
  margin-left: -1px;
  margin-bottom: -1px;
  /*background-color: #a1887f*/
}
.timetableWrapper:first-child .timetableContent {
  padding: 0;
  text-align: center;
}
/*.wrap {
  width: 500px;
}*/
.topWrap {
  width: 20rem;
  /*overflow: hidden;*/
}

.time {
  position: absolute;
  left: -5rem;
  border: 1px solid #424242;

}

.timetableWrapper:first-child .timetableContent{
  /*background-color: #ff8a65;*/
  position: relative;
  top: 0;
}

.courseItem {
  /*border-top: 10px solid #fff;*/
  text-align: center;
  padding: 10px;
}

.todayStyle {
  border-top: 10px solid #2196f3;
  margin: 0 -1px;
}

.detial {
  position: fixed;
  box-sizing: border-box;
  padding: 40px;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 100;
  font-size: 16px;
  line-height: 30px;
  background-color: rgba(0, 0, 0, .8);
  overflow: auto;
}

.detialWrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.detial button {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 200rpx;
  height: 80rpx;
  margin-left: -100rpx;
  text-align: center;
  font-size: 14px;
  line-height: 80rpx;
  border: 0 !important;
}

.nowCourse {
  background: #000;
  height: 100%;
  width: 100%;
  padding: 0;
}
