/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container button {
  border-color: #fff;
  color: #fff;
}

.username-wrapper,
.password-wrapper {
  position: relative;
  margin-top: 20px;
}

.change-icon {
  position: absolute;
  width: 1rem;
  height: 1rem;
  top: 50%;
  margin-top: -0.5rem;
}

.change-username {
  height: 1.4rem;
  width: 1.4rem;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 10;
}
